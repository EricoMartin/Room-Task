<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basebox.betterwayapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BetterWayApp">
        <activity android:name=".auth.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity
            android:name=".MentorsActivity"
            android:label="@string/mentors" />
        <activity
            android:name=".FriendsActivity"
            android:label="@string/friends" />
        <activity android:name=".BaseActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/family" />
    </application>

</manifest>